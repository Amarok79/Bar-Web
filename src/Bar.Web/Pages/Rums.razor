@page "/rums"
@inject IRumRepository Repository

<PageLayout HeaderVisible="false" BannerVisible="true" BannerText="Rum">

    <ChildContent>
        <p class="item-page-title">Unser Rum Sortiment</p>

        <p class="item-page-subtitle">Rum oder Rhum. Hauptsache genießen.</p>

        <div class="item-container">
            @if (mItems != null) {
                @foreach (var item in mItems) {
                    <div class="item">
                        <img class="item-image" src="@(Utils.GetLowResRumImagePath(item.Image))"/>
                        <p class="item-title">@item.Name</p>
                        <p class="item-subtitle">@item.Teaser</p>
                    </div>
                }
            }
        </div>
    </ChildContent>

    <FooterContent>
        <Navigation/>
    </FooterContent>

</PageLayout>


@code {

    IEnumerable<Rum> mItems;

    protected override async Task OnInitializedAsync() {
        mItems = Utils.CreateEmptyRums();
        await Task.Delay(50);
        mItems = await Repository.GetAllAsync();
        mItems = mItems.OrderBy(x => x.Name);
    }

}